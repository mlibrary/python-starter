{
    // "build": {
    //     "dockerfile": "../Dockerfile",
    //     "context": ".."
    // },
    "workspaceFolder": "/app", // What should open when connecting to the container
    "service": "python_app", // The service we should connect to once running
    "dockerComposeFile": "../compose.yml", // The compose file to build relative to the devcontainer.json file
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python"
            ],
            "settings": {
                "python.testing.pytestEnabled": true,
                "python.testing.pytestPath": "pytest",
                "python.linting.pylintEnabled": true,
                "python.linting.pylintPath": "ruff",
                "python.linting.pylintArgs": [
                    "--disable=all",
                    "--enable=F,E,unreachable,duplicate-key,unnecessary-semicolon,global-variable-not-assigned,unused-variable,binary-op-exception,bad-format-string,anomalous-backslash-in-string,bad-open-mode"
                ]
            }
        }
    },
    "features": {
        "ghcr.io/devcontainers/features/git:1": {
            "ppa": true,
            "version": "latest"
        },
        "ghcr.io/warrenbuckley/codespace-features/sqlite:1": {},
        "ghcr.io/itsmechlark/features/rabbitmq-server:1": {
            "version": "3"
        }
    },
    // Use 'forwardPorts' to make a list of ports inside the container available locally.
    "forwardPorts": [
        5672,
        15672
    ]
}